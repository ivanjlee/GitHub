<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#28A745" />
            <gradient android:angle="270" android:endColor="#2BB73E" android:startColor="#2BB73E" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#28A745" />
            <gradient android:angle="270" android:endColor="#2BB73E" android:startColor="#2BB73E" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#28A745" />
            <gradient android:angle="270" android:endColor="#7328A745" android:startColor="#7F34d058" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#28A745" />
            <gradient android:angle="270" android:endColor="#E628A745" android:startColor="#FF34d058" />
        </shape>
    </item>
</selector>