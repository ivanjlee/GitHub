<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ivan.github">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        android:name=".GitHubApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
            android:name="APP_NAME"
            android:value="${APP_NAME}" />

        <!-- splash -->
        <activity
            android:name=".app.login.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <data
                    android:host="@string/route_authority"
                    android:scheme="@string/route_schema" />

            </intent-filter>
        </activity>

        <!--  login  -->
        <activity
            android:name=".app.login.OAuthActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".app.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data
                    android:host="@string/route_authority"
                    android:path="/login"
                    android:scheme="@string/route_schema" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.login.LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="@string/route_authority"
                    android:path="/landing"
                    android:scheme="@string/route_schema" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="@string/route_authority"
                    android:path="/homepage"
                    android:scheme="@string/route_schema" />
            </intent-filter>
        </activity>
        <activity android:name=".web.WebActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="@string/route_authority"
                    android:path="/web"
                    android:scheme="@string/route_schema" />
            </intent-filter>
        </activity>



        <activity android:name=".app.BaseActivity" />
        <activity android:name=".app.ToolbarActivity" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">

            <meta-data
                android:name="com.ivan.github.core.init.CrashReporterInit"
                android:value="androidx.startup" />
            <meta-data
                android:name="com.ivan.github.core.init.AppInit"
                android:value="androidx.startup" />
            <meta-data
                android:name="com.ivan.github.core.init.LogInit"
                android:value="androidx.startup" />
            <meta-data
                android:name="com.ivan.github.core.init.BaseConfigInit"
                android:value="androidx.startup" />
            <meta-data
                android:name="com.ivan.github.core.init.UserCenterInit"
                android:value="androidx.startup" />
            <meta-data
                android:name="com.ivan.github.core.init.SettingsInit"
                android:value="androidx.startup.async" />
        </provider>

    </application>

</manifest>